<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/size10"

        >


        <!--    section 2 skip $ order-->

        <LinearLayout
            android:id="@+id/ll_sec_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size5">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            style="@style/CommanStyleAN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"

                            android:textSize="@dimen/size15"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/skCode"
                            style="@style/CommanStyleAN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size5"
                            android:text="@string/sk_code"

                            android:textSize="@dimen/size15"
                            android:textStyle="normal" />


                        <TextView

                            android:id="@+id/txt_add_value"
                            style="@style/CommanStyleAN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size5"
                            android:text="@string/txt_shipping_address"
                            android:textSize="@dimen/size15"

                            android:visibility="visible" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size15"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/ll_take_order"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size40"
                    android:layout_weight="1.3"
                    android:background="@drawable/dashboard_dark_main"
                    android:orientation="vertical">

                    <TextView

                        style="@style/CommonStyleB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/size10"
                        android:gravity="center"
                        android:text="Take Shop Photo with Shop Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size12" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_skip"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size40"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_weight="0.7"
                    android:background="@drawable/dashboard_dark_main"
                    android:orientation="vertical">

                    <TextView

                        style="@style/CommonStyleB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/size10"
                        android:gravity="center"
                        android:text="Not Able to Track"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size12" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>